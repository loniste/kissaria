<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/user_image"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        tools:text="text text"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name">

        <com.ma.kissairaproject.ui.UITextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:text="Tableau de bord"
app:icon_id="@drawable/dashboard_aswak"
            app:icon_tint="@color/black"
android:id="@+id/dashboard"
            />
        <com.ma.kissairaproject.ui.UITextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:text="ParamÃ¨tres"
            app:icon_id="@drawable/settings_aswak"
            app:icon_tint="@color/black"
            android:id="@+id/settings"
            />
        <com.ma.kissairaproject.ui.UITextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:text="Mon compte"
            app:icon_id="@drawable/my_profile_aswak"

            app:icon_tint="@color/black"
            android:id="@+id/profile"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>