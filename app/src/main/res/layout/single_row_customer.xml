<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:animateLayoutChanges="false"
    card_view:cardBackgroundColor="#f2f2f2"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_right_ribbon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.03"

            />
        <View
            android:id="@+id/status_ribbon"
            android:layout_width="0dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toLeftOf="@id/ver_right_ribbon"

            android:layout_height="0dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"

            android:background="#efc84a"





            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_left_logos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.43"

            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_right_entries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.45"

            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_left_entries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.14"

            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_bottom_entries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.2"

            />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            card_view:layout_constraintLeft_toRightOf="@id/ver_right_ribbon"
            card_view:layout_constraintRight_toLeftOf="@id/ver_left_entries"

            android:baselineAlignBottom="true"
            card_view:layout_constraintBaseline_toBaselineOf="@id/commande"

            android:src="@drawable/cmd_icon"
            android:scaleType="fitEnd"
            android:layout_marginStart="@dimen/cardview_margin"

            />
        <TextView
            android:id="@+id/commande"

            android:layout_width="0dp"
            card_view:layout_constraintLeft_toRightOf="@id/ver_left_entries"
            card_view:layout_constraintRight_toLeftOf="@id/ver_right_entries"

            android:layout_height="wrap_content"

            card_view:layout_constraintTop_toTopOf="parent"
            android:gravity="top"
            android:paddingLeft="5dp"

            android:text="N°123456"
            android:fontFamily="@font/bebas_bold"
            android:textColor="@color/almost_black"
            android:layout_marginTop="@dimen/cardview_margin"

            android:textSize="24sp"


            />

        <ImageView
            android:id="@+id/status_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            card_view:layout_constraintLeft_toRightOf="@id/ver_right_ribbon"
            card_view:layout_constraintRight_toLeftOf="@id/ver_left_entries"


            card_view:layout_constraintBaseline_toBaselineOf="@id/status_tv"
            android:baselineAlignBottom="true"
            android:layout_marginStart="@dimen/cardview_margin"
            android:src="@drawable/ic_ready_icon"
            android:scaleType="fitEnd"
            />
        <TextView
            android:id="@+id/status_tv"

            android:layout_width="0dp"
            card_view:layout_constraintLeft_toRightOf="@id/ver_left_entries"
            card_view:layout_constraintRight_toLeftOf="@id/ver_right_entries"

            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@id/commande"

            android:gravity="top"
            android:paddingLeft="5dp"

            android:text="Prêt"

            android:fontFamily="@font/bebas_bold"
            android:textColor="#efc84a"
            android:layout_marginTop="@dimen/cardview_margin"
            android:textSize="24sp"

            />




        <TextView
            android:id="@+id/creation_time"

            android:layout_width="wrap_content"
            card_view:layout_constraintLeft_toRightOf="@id/ver_right_entries"

            android:layout_height="wrap_content"

            card_view:layout_constraintTop_toTopOf="parent"
            android:gravity="top"
            android:paddingLeft="10dp"

            android:text="12:00"
            android:fontFamily="@font/bebas_bold"

            android:textColor="@color/almost_black"
            android:layout_marginTop="@dimen/cardview_margin"
            android:textSize="24sp"

            />
        <TextView
            android:id="@+id/creation_date"

            android:layout_width="wrap_content"
            card_view:layout_constraintLeft_toRightOf="@id/ver_right_entries"

            android:layout_height="wrap_content"

            card_view:layout_constraintTop_toBottomOf="@id/creation_time"

            android:gravity="top"
            android:paddingLeft="10dp"

            android:text="12-10-19"
            android:fontFamily="@font/bebas_bold"

            android:textColor="@color/almost_black"
            android:layout_marginTop="@dimen/cardview_margin"
            android:textSize="24sp"

            />
        <TextView
            android:id="@+id/customer_ship_time"

            android:layout_width="wrap_content"

            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"

            card_view:layout_constraintTop_toTopOf="parent"
            android:gravity="top"
            android:paddingLeft="10dp"

            android:text="12:00"
            android:fontFamily="@font/bebas_bold"
            android:textColor="@color/almost_black"

            android:layout_marginTop="@dimen/cardview_margin"
            android:layout_marginEnd="@dimen/cardview_margin"
            android:textSize="24sp"

            />
        <TextView
            android:id="@+id/customer_ship_date"

            android:layout_width="wrap_content"

            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"

            card_view:layout_constraintTop_toBottomOf="@id/customer_ship_time"

            android:gravity="top"
            android:paddingLeft="10dp"

            android:text="12-10-19"
            android:fontFamily="@font/bebas_bold"
            android:textColor="@color/almost_black"

            android:layout_marginTop="@dimen/cardview_margin"
            android:layout_marginEnd="@dimen/cardview_margin"
            android:textSize="24sp"


            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintLeft_toRightOf="@id/ver_right_entries"
            card_view:layout_constraintRight_toRightOf="parent"

            card_view:layout_constraintTop_toBottomOf="@id/creation_time"
            card_view:layout_constraintBottom_toTopOf="@id/creation_date"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chevron"
            />

        <TextView
            android:id="@+id/mad"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/bebas_bold"
            android:gravity="bottom"

            android:text="DH"
            android:textColor="@color/almost_black"
            android:layout_marginEnd="@dimen/cardview_margin"

            android:textSize="@dimen/normal"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintBaseline_toBaselineOf="@id/price"

            tools:layout_editor_absoluteY="108dp" />

        <TextView
            android:id="@+id/afterCommaPrice"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/bebas_bold"
            card_view:layout_constraintBaseline_toBaselineOf="@id/price"
            android:gravity="bottom"

            android:text="50"
            android:textColor="@color/almost_black"

            android:textSize="@dimen/normal"
            card_view:layout_constraintRight_toLeftOf="@id/mad"

            tools:layout_editor_absoluteY="108dp" />

        <TextView
            android:id="@+id/price"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/bebas_bold"

            android:gravity="bottom"

            android:text="271,"
            android:textColor="@color/almost_black"
            android:textSize="60dp"
            card_view:layout_constraintRight_toLeftOf="@id/afterCommaPrice"
            card_view:layout_constraintTop_toBottomOf="@id/customer_ship_date"


            tools:layout_editor_absoluteY="68dp" />
        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/hidable_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:visibility="gone"
            card_view:layout_constraintLeft_toRightOf="@id/ver_right_ribbon"
            card_view:layout_constraintRight_toRightOf="parent"

            card_view:layout_constraintTop_toBottomOf="@id/price"
            android:layout_marginEnd="@dimen/cardview_margin"

            android:layout_marginLeft="@dimen/cardview_margin"
            android:paddingBottom="@dimen/cardview_margin"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail_cmd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                card_view:layout_constraintTop_toTopOf="parent"


                >

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

